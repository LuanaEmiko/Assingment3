<div class="hero">
    <h1><%= site.name %></h1>
    <p>Below, you will find detailed information about the site: <%= site.name %></p>
</div>

<div class="container">
    <div class="row">
        <!-- Left Column - Image -->
        <div class="col-md-6">
            <img src="<%= site.image %>" alt="<%= site.name %>" class="img-fluid">
        </div>
        
        <!-- Right Column - Site Details -->
        <div class="col-md-6">
            <p><strong>Site Name:</strong> <%= site.site %></p>
            <p><strong>Date:</strong> <%= site.date %> (<%= site.dateType %>)</p>
            <p><strong>Location:</strong> <%= site.location %>, <%= site.provinceOrTerritoryObj.name %></p>
            <p><strong>Region:</strong> <%= site.region %></p>
            <p><strong>Geolocation:</strong> <%= site.latitude %>, <%= site.longitude %></p>
            <p><strong>Designated:</strong> <%= site.designated %></p>

            <!-- Quote Section -->
            <blockquote id="quote">
                <p>"Loading quote..."</p>
                <footer>- Unknown</footer>
            </blockquote>

            <!-- Back Button -->
            <a href="#" onclick="history.back(); return false;" class="btn btn-secondary">Go Back</a>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        fetch("https://quotable.io/random")
            .then(response => response.json())
            .then(data => {
                document.getElementById("quote").innerHTML = `<p>"${data.content}"</p><footer>- ${data.author}</footer>`;
            })
            .catch(error => console.error("Error fetching quote:", error));
    });
</script>
